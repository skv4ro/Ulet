<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!--<file>${user.home}/AppData/Roaming/Juvius/Ulet/log.txt</file>-->
        <file>${user.home}/documents/ulet/log.txt</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36}.%M\(\):%L - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36}.%M\(\):%L - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="sk.juvius.ulet" level="DEBUG" />

    <root level="ERROR">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
